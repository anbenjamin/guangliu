<?xml version="1.0" encoding="utf-8"?>
<!--注册界面-->
<!--这里的布局放置是： 1 个 ImageView 控件，用于显示用户头像；3 个 EditText 控件，用于输入用户名、密码、再次输入密码；1 个 Button 控件为注册按钮-->
<!--修改 activity_register.xml 为 LinearLayout 布局-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">
    <include layout="@layout/main_title_bar"></include><!--引入标题栏-->

    <!--三个编辑框-->
    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="35dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_user"
        android:gravity="center_vertical"
        android:theme="@style/MyEditText"
        android:hint="请输入昵称"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="#cccbcb"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/et_user_phone"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:drawablePadding="10dp"
        android:paddingLeft="8dp"
        android:layout_gravity="center_horizontal"
        android:drawableStart="@drawable/ic_tel"
        android:gravity="center_vertical"
        android:theme="@style/MyEditText"
        android:hint="请输入手机号"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="#cccbcb"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/et_user_email"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:drawablePadding="10dp"
        android:paddingLeft="8dp"
        android:layout_gravity="center_horizontal"
        android:drawableStart="@drawable/ic_email"
        android:gravity="center_vertical"
        android:theme="@style/MyEditText"
        android:hint="请输入邮箱"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="#cccbcb"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/et_psw"
        android:layout_width="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:drawablePadding="10dp"
        android:paddingLeft="8dp"
        android:drawableStart="@drawable/ic_password"
        android:theme="@style/MyEditText"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="#cccbcb"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/et_psw_again"
        android:layout_width="fill_parent"
        android:layout_marginTop="15dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:drawablePadding="10dp"
        android:paddingLeft="8dp"
        android:drawableStart="@drawable/ic_password"
        android:theme="@style/MyEditText"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="#cccbcb"
        android:textSize="14sp"/>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="25dp"
        android:text="注册"
        android:background="@drawable/border_line_while"
        android:textColor="@color/white"
        android:textSize="20sp"/>

</LinearLayout>