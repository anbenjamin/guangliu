<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/title_background"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <android.support.v4.view.ViewPager
            android:id="@+id/mainViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_index"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text=" "
                android:background="@drawable/xiaorong_pressed"
                android:textColor="@color/white"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/item_diary"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text=" "
                android:background="@drawable/diary_normal"
                android:textColor="@color/white"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/item_find"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text=" "
                android:background="@drawable/find_normal"
                android:textColor="@color/white"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/item_exercese"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text=" "
                android:background="@drawable/exercise_normal"
                android:textColor="@color/white"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/item_me"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text=" "
                android:background="@drawable/me_normal"
                android:textColor="@color/white"
                android:textSize="15dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical">

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray"
                    android:gravity="center_vertical"
                    android:text="   监测"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
                <RelativeLayout
                    android:id="@+id/setting1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:text="位置服务" />


                    <Switch
                        android:id="@+id/setting_checkbox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:thumb="@drawable/switch_thumb"
                        android:track="@drawable/switch_track"
                        android:layout_marginEnd="28dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>

                <RelativeLayout
                    android:id="@+id/setting2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:text="记录使用时间" />

                    <Switch
                        android:id="@+id/setting_checkbox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:track="@drawable/switch_track"
                        android:thumb="@drawable/switch_thumb"
                        android:layout_marginEnd="28dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>

                <RelativeLayout
                    android:id="@+id/setting3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:text="记录特定时间" />

                    <Switch
                        android:id="@+id/setting_checkbox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:track="@drawable/switch_track"
                        android:thumb="@drawable/switch_thumb"
                        android:layout_marginEnd="28dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:background="@color/gray"
                    android:text="   数据"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/data_button1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/background"
                    android:gravity="center_vertical"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="   导出数据"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>

                <Button
                    android:id="@+id/data_button2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/background"
                    android:gravity="center_vertical"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="   备份和恢复"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:background="@color/gray"
                    android:text="   反馈"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/feedback_button1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/background"
                    android:gravity="center_vertical"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="   发送反馈信息"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>

                <Button
                    android:id="@+id/feedback_button2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/background"
                    android:gravity="center_vertical"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="   求打分求鼓励！"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/gray"
                    android:gravity="center_vertical"
                    android:text="   查看使用情况"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:id="@+id/setting4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:text="   通知频率" />

                    <TextView
                        android:id="@+id/rate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="28dp"
                        android:text="每天"
                        android:textSize="15sp"
                        android:textColor="@color/white"/>
                </RelativeLayout>


                <TextView
                    android:id="@+id/text5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/gray"
                    android:gravity="center_vertical"
                    android:text="   技术支持"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/support_button1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/background"
                    android:gravity="center_vertical"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="   恢复购买"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>

                <Button
                    android:id="@+id/support_button2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/background"
                    android:gravity="center_vertical"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="   常见问题"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>

                <Button
                    android:id="@+id/support_button3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/background"
                    android:gravity="center_vertical"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="   隐私条款"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/line7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>

                <Button
                    android:id="@+id/support_button4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/background"
                    android:gravity="center_vertical"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="   使用条款"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/line8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>

                <RelativeLayout
                    android:id="@+id/setting5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:text="   版本" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="28dp"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:text="v1.2.0"/>



                </RelativeLayout>

                <TextView
                    android:id="@+id/line9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>

                <Button
                    android:id="@+id/support_button6"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/background"
                    android:gravity="center_vertical"
                    android:text="   联系我们"
                    style="?android:attr/borderlessButtonStyle"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>